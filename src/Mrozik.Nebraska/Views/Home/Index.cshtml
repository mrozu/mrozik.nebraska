@{
    ViewData["Title"] = "Home Page";
}


@Html.Partial("_gridFiltersPanelPartial")

<div class="row">
    <table id="ordersGrid" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Progress</th>
                <th>Priority</th>
                <th>CustomerName</th>
                <th>Date</th>
                <th>Remarks</th>
                <th>Description</th>
                <th>Departments</th>
                <th>Quantity</th>
                <th>Colors</th>
                <th>RealisationDetails</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script>
        $(document)
            .ready(function () {

                var ordersGrid = $('#ordersGrid')
                    .DataTable({
                        "info": false,
                        "lengthChange": false,
                        "filter": false,
                        "processing": true,
                        "serverSide": true,
                        "columns": [
                            { "data": "id" },
                            { "data": "number" },
                            { "data": "progress" },
                            { "data": "priority" },
                            { "data": "customerName" },
                            { "data": "date" },
                            { "data": "remarks" },
                            { "data": "description" },
                            { "data": "departments" },
                            { "data": "quantity" },
                            { "data": "colors" },
                            { "data": "realisationDetails" }
                        ],
                        "ajax": {
                            "url": "Orders/Get",
                            "type": "POST",
                            "data": function (d) {
                                d.filters = {
                                    startDate: $('#filtersStartDate').val(),
                                    endDate: $('#filtersEndDate').val(),
                                    scansAvailability: $('#filtersScansAvailability').val(),
                                    departmentName: $('#filtersDepartment').val(),
                                    search: $('#filtersSearch').val(),
                                    orderStatus: $('#filtersOrderStatus').val()
                                }
                            }
                        }
                    });

                $('#ordersGrid tbody').on('click', 'tr', function () {
                    var data = ordersGrid.row(this).data();
                    console.log(data);
                });

                $('#filtersDoSearch')
                    .click(function () {
                        $('#ordersGrid').DataTable().ajax.reload();
                    });
            });
    </script>

    @Html.Partial("_gridFiltersPanelPartial_scripts");
}
