@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Progress</th>
                <th>Priority</th>
                <th>CustomerName</th>
                <th>Date</th>
                <th>Remarks</th>
                <th>Description</th>
                <th>Departments</th>
                <th>Quantity</th>
                <th>Colors</th>
                <th>RealisationDetails</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Progress</th>
                <th>Priority</th>
                <th>CustomerName</th>
                <th>Date</th>
                <th>Remarks</th>
                <th>Description</th>
                <th>Departments</th>
                <th>Quantity</th>
                <th>Colors</th>
                <th>RealisationDetails</th>
            </tr>
        </tfoot>
    </table>
</div>

@section Scripts
{
    <script>
        $(document)
            .ready(function () {
                $('#example')
                    .DataTable({
                        "processing": true,
                        "serverSide": true,
                        "ajax": {
                            "url": "Orders/Get",
                            "type": "POST"
                        },
                        "columns": [
                            { "data": "id" },
                            { "data": "number" },
                            { "data": "progress" },
                            { "data": "priority" },
                            { "data": "customerName" },
                            { "data": "date" },
                            { "data": "remarks" },
                            { "data": "description" },
                            { "data": "departments" },
                            { "data": "quantity" },
                            { "data": "colors" },
                            { "data": "realisationDetails" }
                        ]
                    });
            });
    </script>
}
